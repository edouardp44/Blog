{% block title %}All articles{% endblock %}
{% block body %}
<h1>{{ owner }}'s blog index</h1>
    <h2>All articles from article s table : </h2>
    {{ form_start(form) }}
    <div>
        {{ form_row(form.name) }}
        <button class="btn">{{ button_label|default('Save') }}</button>
        {{ form_row(form.searchField) }}
        <button type="submit" name="btnSearch">Rechercher</button>
    </div>
    {{ form_end(form) }}
    {% for article in articles %}
        <div>
            <h2>{{ loop.index }} / {{ article.title }} - Category : {{ article.category.name }}</h2>
            <p>{{ article.content }}</p>
        </div>
    {% else %}
        Aucun article trouv√©.
    {% endfor %}
    <a href="{{ path('app_index') }}">
        Back to homepage.
    </a>
{% endblock %}